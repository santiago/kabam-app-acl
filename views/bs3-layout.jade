html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    meta(name='author', content='')

    link(href='/assets/stylesheets/bootstrap.css', rel='stylesheet')
    style
      /* To push content below navbar */
      @media (min-width: 980px) {
      body {
      margin-top: 41px;
      }
      }
      .sidebar-nav {
      padding: 9px 0;
      }
      @media (max-width: 980px) {
      /* Enable use of floated navbar text */
      .navbar-text.pull-right {
      float: none;
      padding-left: 5px;
      padding-right: 5px;
      }
      }
    //link(href='/assets/stylesheets/bootstrap-responsive.css', rel='stylesheet')
    link(href='/assets/styles.css', rel='stylesheet')
    link(href='/styles.css', rel='stylesheet')
    link(href='/assets/stylesheets/css3.css', rel='stylesheet')
    block head

  body
    .navbar.navbar-inverse.navbar-fixed-top
      a.navbar-brand(href='#') monimus
      if(user)
        .btn-group.access-menu.pull-right
          button.btn.btn-default.btn-sm.dropdown-toggle(type="button", data-toggle="dropdown") 
            span.selected #{user.username}
            span &nbsp;
            span.caret &nbsp;
          ul.dropdown-menu(role="menu")
            li
              a(href="#", value="logout") Logout

    block content
    script(type="text/javascript", src="/assets/javascripts/thirdparty/jquery/jquery-1.8.min.js")
